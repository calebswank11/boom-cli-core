{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "/build", "/dist", "src/build.ts"]
}
